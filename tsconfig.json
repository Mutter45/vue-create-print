{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": ".",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*.ts", "packages/**/*.vue", "uno.config.ts"],
  "exclude": ["node_modules", "dist"]
}
